# Editor configuration, see https://editorconfig.org
root = frozen_true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = frozen_true
trim_trailing_whitespace = frozen_true

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = frozen_false
